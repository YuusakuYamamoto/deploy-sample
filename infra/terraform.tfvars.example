# Example Terraform variables file
# Copy this file to terraform.tfvars and fill in your specific values

# OCI Configuration
region = "ap-tokyo-1"
compartment_id = "ocid1.compartment.oc1..example"

# Project Configuration
project_name = "sdb-sample"

# Container Registry Configuration
ocir_repository = "nrt.ocir.io/your-namespace/sdb-sample"
image_tag = "latest"

# Database Configuration
database_url = "postgresql://user:password@host:5432/database"

# Resource Sizing (optional - defaults are provided)
frontend_shape_ocpus = 2
frontend_shape_memory = 4
backend_shape_ocpus = 2
backend_shape_memory = 4

# Load Balancer Configuration (optional - defaults are provided)
load_balancer_min_bandwidth = 10
load_balancer_max_bandwidth = 100

# SSL Configuration (optional - for production HTTPS)
enable_https = false
ssl_certificate_id = ""